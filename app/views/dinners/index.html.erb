<p id="notice"><%= notice %></p>

<h1>Listing Dinners</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dinners.each do |dinner| %>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <p class="lead"><%= link_to(dinner.title, dinner, {:class=> "dinner_link_style"}) %></p>
        <p class="text-info"><%= dinner.description %></p>
        <p class="text-warning"><%= dinner.date %></p>
      </div>
      <div class="col-md-6 col-sm-6">
        <%= image_tag(dinner.image) %>
      </div>
      <tr>
        <td><%= link_to 'Show', dinner %></td>
        <td><%= link_to 'Edit', edit_dinner_path(dinner) %></td>
        <td><%= link_to 'Destroy', dinner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>

    <% end %>
  </tbody>
</table>

<br>

